@model List<Experience>

@{
    ViewData["Title"] = "ExperienceList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
	<div class="container-fluid">
		<h4 class="page-title">Deneyimler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Deneyim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Deneyimler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Unvan</th>
									<th scope="col">Tarih</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Head</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										<td><a href="/Experience/DeleteExperience/@item.Id" class="btn btn-danger">Sil</a></td>
										<td><a href="/Experience/UpdateExperience/@item.Id" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


