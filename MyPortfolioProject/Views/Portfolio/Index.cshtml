@model List<Portfolio>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
	<div class="container-fluid">
		<h4 class="page-title">Portfolyo</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolyo Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Portfolyo ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Alt Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Proje Linki</th>
									<th scope="col">Görsel</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.Description</td>
										<td>@item.Url</td>
										<td> <img src="~/images/@item.Image.FileName" style="width:10em; height:7em;" /></td>
										<td><a data-id="@item.Id" asp-controller="Portfolio" asp-action="Update" asp-route-portfolioId="@item.Id" class="btn btn-success">Güncelle</a></td>
										<td><a data-id="@item.Id" asp-controller="Portfolio" asp-action="Delete" asp-route-portfolioId="@item.Id" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Portfolio" asp-action="Create" class="btn btn-outline-primary">Yeni Portfolyo Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


