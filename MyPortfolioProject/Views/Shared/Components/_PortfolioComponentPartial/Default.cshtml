@model List<Portfolio>

<section id="works" class="s-works target-section">
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolyo</h3>
            <h1>Son Projelerime Göz Atın</h1>
        </div>
    </div>
    <div class="row masonry-wrap">
        <div class="masonry">
            @foreach (var portfolio in Model)
            {
                <div class="masonry__brick">
                    <div class="item-folio">
                        <div class="item-folio__thumb">
                            <a href="~/images/@portfolio.Image.FileName" class="thumb-link" title="Proje" data-size="1050x700">
                                <img src="~/images/@portfolio.Image.FileName"
                                     srcset="/images/@portfolio.Image.FileName 1x, /images/@portfolio.Image.FileName 2x" alt="">
                                <span class="shadow-overlay"></span>
                            </a>
                        </div>

                        <div class="item-folio__text">
                            <h3 class="item-folio__title">
                                @portfolio.Title
                            </h3>
                            <p class="item-folio__cat">
                                @portfolio.SubTitle
                            </p>
                        </div>

                        <a href="@portfolio.Url" class="item-folio__project-link" target="_blank" title="Project link">
                            <i class="im im-link"></i>
                        </a>

                        <div class="item-folio__caption">
                            <p>@portfolio.Description</p>
                        </div>
                    </div> <!-- end item-folio -->
                </div> <!-- end masonry__brick -->
            }
        </div>
    </div> <!-- end masonry -->

</section> <!-- end works -->