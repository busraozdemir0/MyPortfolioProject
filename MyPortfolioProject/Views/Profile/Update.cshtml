@model UserProfileViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
    <div class="container-fluid">
        <h4 class="page-title">Ayarlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Profil Bilgileri</div>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Profile" asp-action="Update" method="POST" enctype="multipart/form-data">
                            <!-- Account -->
                            <div class="card-body">
                                <div class="d-flex align-items-start align-items-sm-center gap-4">
                                    <div class="row">
                                        <div class="col-md-3">
                                            @if (Model.ImageId is null)
                                            {
                                                <img src="~/icons/user-avatar-profile.png" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                                            }
                                            else
                                            {
                                                <img src="~/images/@ViewBag.UserImage" alt="user-avatar" class="d-block rounded" height="100" width="100" id="uploadedAvatar">
                                            }
                                        </div>
                                        <div class="col-md-9">
                                            <div class="button-wrapper">
                                                <label for="upload" class="btn btn-outline-success me-2 mb-4 mt-4 ml-4" tabindex="0">
                                                    <i class="bx bx-upload d-block d-sm-none"></i>
                                                    <input asp-for="Photo" type="file" accept="image/*" class="formaccount-file-input" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr class="my-0" />
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" style="color:red;"></div>
                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label asp-for="Name" class="form-label">İsim <small style="color:red;">*</small> </label>
                                        <input asp-for="Name" class="form-control"
                                               type="text"
                                               autofocus />
                                        <span style="color:red;" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label asp-for="Surname" class="form-label">Soyisim <small style="color:red;">*</small></label>
                                        <input asp-for="Surname" class="form-control"
                                               type="text"
                                               autofocus />
                                        <span style="color:red;" asp-validation-for="Surname"></span>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label asp-for="UserName" class="form-label">Kullanıcı Adı <small style="color:red;">*</small> </label>
                                        <input asp-for="UserName" class="form-control"
                                               type="text"
                                               autofocus />
                                        <span style="color:red;" asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label asp-for="Email" class="form-label">Mail Adresi <small style="color:red;">*</small> </label>
                                        <input asp-for="Email" class="form-control"
                                               type="email"
                                               autofocus />
                                        <span style="color:red;" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası <small style="color:red;">*</small> </label>
                                        <input asp-for="PhoneNumber" class="form-control"
                                               type="tel"
                                               autofocus />
                                        <span style="color:red;" asp-validation-for="PhoneNumber"></span>
                                    </div>

                                    <div class="mb-3 col-md-6">
                                        <label asp-for="CurrentPassword" class="form-label">Mevcut Parola <small style="color:red;">*</small> </label>
                                        <input asp-for="CurrentPassword" class="form-control"
                                               type="text"
                                               autofocus required />
                                        <span style="color:red;" asp-validation-for="CurrentPassword"></span>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label asp-for="NewPassword" class="form-label">Yeni Parola (Opsiyonel)</label>
                                        <input asp-for="NewPassword" class="form-control"
                                               type="text"
                                               autofocus />
                                        <small>Lütfen şifrenizi belirlerken en az bir özel karakter, bir rakam, bir büyük ve bir küçük harf kullanın.</small>
                                        <span style="color:red;" asp-validation-for="NewPassword"></span>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <button type="submit" class="btn btn-primary me-2">Bilgilerimi Güncelle</button>
                                </div>
                            </div>
                            <!-- /Account -->
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
