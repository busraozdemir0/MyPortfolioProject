@model Contact
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Bilgisi Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="Id" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label>Telefon</label>
                            <input type="text" asp-for="Phone" placeholder="Örn. (111) 222 3344" class="form-control" />
                            <br />
                            <label>E-Mail</label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <br />
                            <label>Adres</label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <br />
                            <button class="btn btn-success">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

