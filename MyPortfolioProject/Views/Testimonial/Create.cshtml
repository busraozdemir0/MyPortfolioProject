@model Testimonial
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<label>Ad Soyad</label>
							<input type="text" asp-for="NameSurname" class="form-control" />
							<br />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<label>Referans Görseli</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<button class="btn btn-primary">Referans Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

