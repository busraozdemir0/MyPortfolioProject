@model List<Testimonial>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Referanslar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Referans Görsel</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td>@item.ImageUrl</td>
										<td><a data-id="@item.Id" asp-controller="Testimonial" asp-action="Update" asp-route-testimonialId="@item.Id" class="btn btn-success">Güncelle</a></td>
										<td><a data-id="@item.Id" asp-controller="Testimonial" asp-action="Delete" asp-route-testimonialId="@item.Id" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Testimonial" asp-action="Create" class="btn btn-outline-primary">Yeni Referans Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


