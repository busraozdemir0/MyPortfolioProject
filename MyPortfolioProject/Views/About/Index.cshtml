@model About

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Bilgisi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımda ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Açıklama</th>
                                    <th scope="col">Hakkımda Detay</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.Title</td>
                                    <td>@Model.SubDescription</td>
                                    <td>@Model.Details</td>
                                    <td><a data-id="@ViewBag.aboutId" asp-controller="About" asp-action="Update" asp-route-aboutId="@ViewBag.aboutId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


