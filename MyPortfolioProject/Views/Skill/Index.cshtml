@model List<Skill>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Yetenekler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Başlık</th>
									<th scope="col">Yüzde Olarak Değeri</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Title</td>
										<td>@item.Value%</td>
										<td><a data-id="@item.Id" asp-controller="Skill" asp-action="Update" asp-route-skillId="@item.Id" class="btn btn-success">Güncelle</a></td>
										<td><a data-id="@item.Id" asp-controller="Skill" asp-action="Delete" asp-route-skillId="@item.Id" class="btn btn-danger">Sil</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a asp-controller="Skill" asp-action="Create" class="btn btn-outline-primary">Yeni Yetenek Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


