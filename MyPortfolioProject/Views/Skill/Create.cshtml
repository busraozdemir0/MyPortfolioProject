@model Skill
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Yeteneğin Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Yüzde Olarak Değeri</label>
							<input type="number" asp-for="Value" placeholder="Örn.: 90" class="form-control" />
							<br />
							<button class="btn btn-primary">Yetenek Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

