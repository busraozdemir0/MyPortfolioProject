@model List<Message>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content" style="margin-bottom:20em;">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Gelen Mesaj Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Mesajlar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Gönderen</th>
                                    <th scope="col">Konu</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Mesajı Aç</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NameSurname</td>
                                        <td>@item.Subject</td>
                                        <td>@item.SendDate.ToShortDateString()</td>
                                        <td><a href="/Message/MessageDetail/@item.Id" class="btn btn-warning">Mesajı Aç</a></td>
                                        @if (item.IsRead == true)
                                        {
                                            <td><a href="/Message/ChangeIsReadToFalse/@item.Id" class="btn btn-outline-dark">Okunmadı Olarak İşaretle</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/Message/ChangeIsReadToTrue/@item.Id" class="btn btn-outline-info">Okundu Olarak İşaretle</a></td>
                                        }
                                        <td><a href="/Message/DeleteMessage/@item.Id" class="btn btn-danger">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>